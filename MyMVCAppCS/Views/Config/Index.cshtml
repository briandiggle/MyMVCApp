@model MyMVCAppCS.ViewModels.ConfigViewModel

@{ ViewBag.Title = "Amend Configuration"; }

@{ Html.EnableClientValidation(); }
    <h2>Session Configuration</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <table>
        <tr>
            <td class="searchform">@Html.LabelFor(configmodel => configmodel.AtWorkSetting)</td> 
            <td class="searchform">@Html.DropDownListFor(config => config.AtWorkSetting, Model.UsageLocationOptions)</td>               
            <td class="searchform"></td> 
        </tr>
              
        <tr>
            <td class="searchform">@Html.LabelFor(configmodel => configmodel.DataTierTargetSetting)</td>
            <td class="searchform">@Html.DropDownListFor(config => config.DataTierTargetSetting, Model.DataTierSelectionOptions)</td>
            <td class="searchform"></td>          
        </tr>
            
        <tr>
            <td colspan="3" class="searchform, aligncenter">
                &nbsp;
            </td>
        </tr>        
                                                                         
        <tr>
            <td colspan="3" class="searchform, aligncenter">
                <input type="submit" value="Update Session Config" />
            </td>
        </tr>
            
        <tr>
            <td colspan="3" class="searchform, aligncenter">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td colspan="3" class="searchform, aligncenter">@Html.Raw(Model.ConfigUpdateMessage)</td>
        </tr>
    </table>    
    }

       
 


